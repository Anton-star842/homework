ALTER TABLE Users
ADD COLUMN phone_number VARCHAR(15);  

ALTER TABLE Users
DROP COLUMN dog_name; 

CREATE TABLE Grade_Assignment (
    id INT PRIMARY KEY AUTO_INCREMENT,
    response_id INT NOT NULL,         
    grade INT NOT NULL,                
    date DATE NOT NULL,               
    teacher_id INT NOT NULL,           
    FOREIGN KEY (response_id) REFERENCES Assignment_Responses(id), 
    FOREIGN KEY (teacher_id) REFERENCES Users(id)                     
);

ALTER TABLE Assignments
ADD COLUMN deadline DATE NOT NULL; 

ALTER TABLE Assignment_Responses
ADD COLUMN submission_date DATE; 
